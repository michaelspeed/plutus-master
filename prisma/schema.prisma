// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Organization {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name        String
    address     String?
    gst         String?
    state       String?
    zip         Int?
    phone       Int?
    licence     String?
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
    customers   Customer[]
}

enum GstStatus {
    registered
    unregistered
    compositionTaxable
    uin
    ecommerce
}

model Customer {
    id                  String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name                String
    contact_person      String
    companyId           String?         @db.ObjectId
    company             Organization?   @relation(fields: [companyId], references: [id])
    shipping_address    String?
    bill_address        String?
    city                String?
    pin_code            String?
    phone               BigInt?
    drug_license        String?
    drug_license_validity    DateTime?
    openingBalance      Float       @default(0.00)
    currentBalance      Float       @default(0.00)
    PAN                 String?
    creditlimit         Float       @default(0.00)
    creditdays          Int         @default(0)
    state               String?
    stop_billings       Int         @default(0)
    discount            Float?
    istatetax           Boolean?
    area_name           String?
    headquaters         String?
    MSR                 String?
    DSM                 String?
    transporter         String?
    banker              String?
    document_through    String?
    GSTIN               String?
    state_tax           Boolean?
    gststatus           GstStatus?      @default(unregistered)
    createdAt           DateTime        @default(now())
    updatedAt           DateTime        @updatedAt
}

model Invoice {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    invoice_no  String
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
}
