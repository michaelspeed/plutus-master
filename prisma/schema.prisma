// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Organization {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name        String
    address     String?
    gst         String?
    state       String?
    zip         Int?
    phone       Int?
    licence     String?
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
    customers   Customer[]
}

enum GstStatus {
    registered
    unregistered
    compositionTaxable
    uin
    ecommerce
}

model Customer {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name        String
    contact     String
    companyId   String?         @db.ObjectId
    company     Organization?   @relation(fields: [companyId], references: [id])
    saddress    String?
    baddress    String?
    city        String?
    zip         Int?
    phone       BigInt?
    druglicenseno   String?
    drugvalidity    DateTime?
    openingBalance  Float       @default(0.00)
    currentBalance  Float       @default(0.00)
    pan             String?
    creditlimit     Float       @default(0.00)
    creditDays      Int         @default(0)
    state           String?
    stopBilling     Int         @default(0)
    discount        Float?
    istatetax       Boolean?
    area            String?
    headq            String?
    msr            String?
    dsm            String?
    transporter    String?
    banker         String?
    documenthrough         String?
    gstin          String?
    gststatus      GstStatus?   @default(unregistered)
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
}

model Invoice {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    invoice_no  String
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
}
