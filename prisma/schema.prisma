// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Organization {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name        String
    address     String?
    gst         String?
    state       String?
    zip         Int?
    phone       BigInt?
    licence     String?
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
    customers   Customer[]
    creditorIds String[]        @db.Array(ObjectId)
    creditors   Creditor[]      @relation(fields: [creditorIds])
    products    Products[]
    groups      ProducsGroups[]
}

enum GstStatus {
    registered
    unregistered
    compositionTaxable
    uin
    ecommerce
}

model Customer {
    id                  String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name                String
    contact_person      String
    companyId           String?         @db.ObjectId
    company             Organization?   @relation(fields: [companyId], references: [id])
    shipping_address    String?
    bill_address        String?
    city                String?
    pin_code            String?
    phone               BigInt?
    drug_license        String?
    drug_license_validity    DateTime?
    openingBalance      Float       @default(0.00)
    currentBalance      Float       @default(0.00)
    PAN                 String?
    creditlimit         Float       @default(0.00)
    creditdays          Int         @default(0)
    state               String?
    stop_billings       Int         @default(0)
    discount            Float?
    istatetax           Boolean?
    area_name           String?
    headquaters         String?
    MSR                 String?
    DSM                 String?
    transporter         String?
    banker              String?
    document_through    String?
    GSTIN               String?
    gst_status          String?     @default("UNREGISTERED")
    state_tax           Boolean?    @default(false)
    l_type              Boolean?    @default(false)
    gststatus           GstStatus?      @default(unregistered)
    createdAt           DateTime        @default(now())
    updatedAt           DateTime        @updatedAt
}

model Creditor {
    id                  String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name                String
    contact_person      String
    companyIds          String[]          @db.Array(ObjectId)
    company             Organization[]    @relation(fields: [companyIds])
    shipping_address    String?
    bill_address        String?
    city                String?
    pin_code            String?
    phone               BigInt?
    drug_license        String?
    drug_license_validity    DateTime?
    openingBalance      Float       @default(0.00)
    currentBalance      Float       @default(0.00)
    PAN                 String?
    creditlimit         Float       @default(0.00)
    creditdays          Int         @default(0)
    state               String?
    stop_billings       Int         @default(0)
    discount            Float?
    istatetax           Boolean?
    area_name           String?
    headquaters         String?
    MSR                 String?
    DSM                 String?
    transporter         String?
    banker              String?
    document_through    String?
    GSTIN               String?
    gst_status          String?     @default("UNREGISTERED")
    state_tax           Boolean?    @default(false)
    l_type              Boolean?    @default(false)
    gststatus           GstStatus?      @default(unregistered)
    createdAt           DateTime        @default(now())
    updatedAt           DateTime        @updatedAt
    products            Products[]
}

model Invoice {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    invoice_no  String
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
}

model Products {
    id          String          @id @default(dbgenerated()) @map("_id") @db.ObjectId
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt
    name        String
    description String?
    category    String?
    expiry      Boolean?        @default(false)
    batch_no    String?
    HSN         String?
    GST         Float?
    CGST        Float?
    SGST        Float?
    mfg         String?
    groupId     String?
    tax         Boolean?        @default(true)
    tax_free    Boolean?        @default(false)
    creditorId  String?         @db.ObjectId
    creditor    Creditor?       @relation(fields: [creditorId], references: [id])
    organizationId  String?     @db.ObjectId
    organization   Organization? @relation(fields: [organizationId], references: [id])
    groups       ProducsGroups[]       @relation(fields: [groupId], references: [id])

}

model ProducsGroups {
    id          String              @id @default(dbgenerated()) @map("_id") @db.ObjectId
    name        String
    products    Products[]
    organizationId  String?         @db.ObjectId
    organization    Organization?   @relation(fields: [organizationId], references: [id])
}
